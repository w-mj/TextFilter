{
  "name": "logviewer",
  "displayName": "logviewer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:logviewer.showLog"
  ],
  "main": "./out/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "logviewer.showLog",
        "title": "LogViewer"
      },
      {
        "command": "logviewer.addrule",
        "title": "添加规则",
        "icon": {
          "dark": "resources/dark/plus.svg",
          "light": "resources/light/plus.svg"
        }
      },
      {
        "command": "logviewer.rmrule",
        "title": "删除规则",
        "icon": {
          "dark": "resources/dark/minus.svg",
          "light": "resources/light/minus.svg"
        }
      },
      {
        "command": "logviewer.editrule",
        "title": "修改规则",
        "icon": {
          "dark": "resources/dark/pencil.svg",
          "light": "resources/light/pencil.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logviewer-panel",
          "title": "LogViewer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "logviewer-panel": [
        {
          "id": "highlight-panel",
          "name": "高亮"
        },
        {
          "id": "hide-panel",
          "name": "隐藏"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "logviewer.addrule",
          "when": "view == highlight-panel || view == hide-panel",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "logviewer.rmrule",
          "when": "view == highlight-panel || view == hide-panel",
          "group": "inline"
        },
        {
          "command": "logviewer.editrule",
          "when": "view == highlight-panel || view == hide-panel",
          "group": "inline"
        }
      ]
    }
  },


  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
